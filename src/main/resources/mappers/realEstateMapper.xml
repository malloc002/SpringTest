<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.malloc.spring.test.mybatis.dao.RealEstateDAO">
  
  	<select id="selectRealEstate" resultType="com.malloc.spring.test.mybatis.model.RealEstate"
  	parameterType="int">
  		SELECT
  			`id`
  			, `realtorId`
  			, `address`
  			, `area`
  			, `type`
  			, `price`
  			, `rentPrice`
  			, `createdAt`
            , `updatedAt`
        FROM
            `real_estate`
        WHERE
        	`id` = #{id}
  	</select>
  	
  	<select id="selectRentPrice" resultType="com.malloc.spring.test.mybatis.model.RealEstate"
  	parameterType="int">
  		SELECT
  			`id`
  			, `realtorId`
  			, `address`
  			, `area`
  			, `type`
  			, `price`
  			, `rentPrice`
  			, `createdAt`
            , `updatedAt`
        FROM
            `real_estate`
        WHERE
        	`rentPrice` <![CDATA[ <= ]]> #{rp}
  	</select>
  	
  	<select id="selectAreaPrice" resultType="com.malloc.spring.test.mybatis.model.RealEstate"
  	parameterType="map">
  		SELECT
  			`id`
  			, `realtorId`
  			, `address`
  			, `area`
  			, `type`
  			, `price`
  			, `rentPrice`
  			, `createdAt`
            , `updatedAt`
        FROM
            `real_estate`
        WHERE
        	`area` <![CDATA[ >= ]]> #{area} AND `price` <![CDATA[ <= ]]> #{price}
  	</select>
  	
  	<insert id="insertRealEstate" parameterType="com.malloc.spring.test.mybatis.model.RealEstate">
  		INSERT INTO
  			`real_estate`
  		(
  			`realtorId`
  			, `address`
  			, `area`
  			, `type`
  			, `price`
  			, `createdAt`
            , `updatedAt`
  		)
  		VALUE
  		(
  			#{realtorId}
  			, #{address}
  			, #{area}
  			, #{type}
  			, #{price}
  			, now()
  			, now()
  		)
  	</insert>
  	
  	<insert id="insertRealEstateByField" parameterType="map">
  		INSERT INTO
  			`real_estate`
  		(
  			`realtorId`
  			, `address`
  			, `area`
  			, `type`
  			, `price`
  			, `rentPrice`
  			, `createdAt`
            , `updatedAt`
  		)
  		VALUE
  		(
  			#{realtorId}
  			, #{address}
  			, #{area}
  			, #{type}
  			, #{price}
  			, #{rentPrice}
  			, now()
  			, now()
  		)
  	</insert>
  	
  	<update id="updateRealEstate" parameterType="map">
  		UPDATE `real_estate`
  		SET `type`=#{type}, `price`=#{price}
  		WHERE `id`=#{id} 
  	</update>
  	
  	<delete id="deleteRealEstate" parameterType="int">
  		DELETE FROM `real_estate`
  		WHERE `id`=#{id}
  	</delete>
  
  </mapper>